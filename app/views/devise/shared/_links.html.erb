<!-- app/views/devise/shared/links.html.erb -->

<%- if controller_name != 'sessions' %>
  <div class="auth-link">
    <%= link_to "Log in", new_session_path(resource_name), class: "auth-link-button" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="auth-link">
    <%= link_to "Sign up", new_registration_path(resource_name), class: "auth-link-button" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="auth-link">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "auth-link-button" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="auth-link">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "auth-link-button" %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="auth-link">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "auth-link-button" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="auth-link">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "auth-link-button", data: { turbo: false } %>
    <% end %>
  </div>
<% end %>
